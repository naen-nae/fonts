{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "esnext",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}